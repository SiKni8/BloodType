<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bloodDetail"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <!-- Blood Type Card -->
    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/bloodTypeCard"
        android:layout_width="match_parent"
        android:layout_height="160sp"
        android:layout_gravity="center"
        android:layout_margin="12sp"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvData"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:shadowColor="#A7A7A7"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="15"
                android:text="BLOOD\n\t\tTYPE:"
                android:textColor="#D30308"
                android:textSize="@dimen/info_height" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvBloodDetail"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@drawable/roundtv"
                    android:gravity="center"
                    android:shadowColor="#CC900205"
                    android:shadowDx="8"
                    android:shadowDy="8"
                    android:shadowRadius="25"
                    android:text="A+"
                    android:textColor="#FFFFFF"
                    android:textSize="@dimen/btn_text"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/giveToCard"
        android:layout_width="match_parent"
        android:layout_height="140sp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:padding="0dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvGive"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inforoundedtv"
                android:gravity="center_vertical"
                android:padding="@dimen/about_section_pad"
                android:shadowColor="#CC900205"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:text="@string/give_blood"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/abc_text_size_medium_material" />

            <TextView
                android:id="@+id/tvGiveTo"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:shadowColor="#DBDBDB"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="10"
                android:text=""
                android:textColor="#D30308"
                android:textSize="@dimen/info_height" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/recieveFromCard"
        android:layout_width="match_parent"
        android:layout_height="140sp"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        card_view:cardBackgroundColor="#FFFFFF"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="2dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvReceive"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/inforoundedtv"
                android:gravity="center_vertical"
                android:padding="@dimen/about_section_pad"
                android:shadowColor="#CC900205"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="10"
                android:text="@string/receive_blood"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/abc_text_size_medium_material" />

            <TextView
                android:id="@+id/tvReceiveFrom"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:shadowColor="#DBDBDB"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="10"
                android:text=""
                android:textColor="#D30308"
                android:textSize="@dimen/info_height" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
